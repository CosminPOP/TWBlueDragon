<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Script file="TWBlueDragon.lua"/>

    <Frame name="TWBlueDragon" hidden="true" toplevel="true"
           parent="UIParent" movable="true" enableMouse="true">
        <Size>
            <AbsDimension x="64" y="64"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentTimeLeft" text="[TIMELEFT]" font="Fonts\FRIZQT__.TTF">
                    <Anchors>
                        <Anchor point="CENTER">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Color r="1" g="1" b="1" a="1"/>
                    <FontHeight val="32"/>
                    <Shadow>
                        <Offset x="0" y="0" />
                        <Color r="1" g="1" b="1"/>
                    </Shadow>
                </FontString>
                <FontString name="$parentProcsPerCombat" text="3" font="Fonts\FRIZQT__.TTF">
                    <Anchors>
                        <Anchor point="CENTER">
                            <Offset>
                                <AbsDimension x="0" y="-20"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Color r="1" g="1" b="1" a="1"/>
                    <FontHeight val="14"/>
                    <Shadow>
                        <Offset x="0" y="0" />
                        <Color r="1" g="1" b="1"/>
                    </Shadow>
                </FontString>
                <Texture name="$parentIcon" file="Interface\Icons\INV_Misc_Head_Dragon_Blue">
                    <Size>
                        <AbsDimension x="64" y="64"/>
                    </Size>
                    <Anchors>
                        <Anchor point="CENTER">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>

        </Frames>

        <Scripts>
            <OnLoad>
                    this:RegisterForDrag("LeftButton");
                    this:SetMovable(1);
                    this:SetUserPlaced(true);
            </OnLoad>
            <OnDragStart>
                    this:StartMoving();
                    this.isMoving = true;
            </OnDragStart>
            <OnDragStop>
                    this:StopMovingOrSizing();
                    this.isMoving = false;
            </OnDragStop>
        </Scripts>
    </Frame>

</Ui>
